# Environment Variables for Smart Campus System
# Copy this file to .env and fill in your values

# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,.railway.app,.onrender.com

# Database - Use DATABASE_URL for Railway/Render
# Leave empty for SQLite in local development
DATABASE_URL=

# Legacy DB settings (only used if DATABASE_URL not set)
DB_NAME=smart_campus
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# CORS Settings (for iOS app)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-ios-app-domain.com

# Email Settings (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# SMS Settings (optional)
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret
